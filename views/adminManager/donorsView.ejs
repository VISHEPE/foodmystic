<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

<!-- Navigation Bar -->
<div class="container">
    <header>
        <div class="logo">Food Fairy</div>
        <nav>
            <ul>
                <li><a href="/distributionCenters">Distribution Centers</a></li>
                <li><a href="/beneficiaries">Beneficiaries</a></li>
                <li><a href="/donors">Donors</a></li>
                
                <li><a href="/admin/login">Login</a></li>
                <li><a href="/admin/registration">Registration</a></li>
            </ul>
        </nav>
    </header>

    <!-- Donor List Section -->
    <div class="card">
        <h2>Existing Donors</h2>

        <% if (donors && donors.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Contact</th>
                        <th>Address</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% donors.forEach(donor => { %>
                        <tr>
                            <td><%= donor.name %></td>
                            <td><%= donor.contact %></td>
                            <td><%= donor.address %></td>
                            <td>
                                <a href="/donors/<%= donor.id %>/edit" class="btn btn-edit">Edit</a>
                                <form action="/donors/<%= donor.id %>/delete" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this donor?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p>No donors found.</p>
        <% } %>
    </div>
</div>

</body>
</html>
