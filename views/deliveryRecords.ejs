<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Food Fairy - Delivery Records</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
<div class="container">
    <!-- Header -->
    <header>
      <div class="logo">
        <a href="/">food</a> 
    </div>
        <nav>
            <ul>
                <li><a href="/distributionCenters">Distribution Centers</a></li>
                <li><a href="/beneficiaries">Beneficiaries</a></li>
                <li><a href="/donors">Donors</a></li>
                
                <li><a href="/admin/registration">Donate</a></li>
                <li><a href="/admin/dashboard">back to dashboard</a></li>
                <li><a href="/admin/logout">Logout</a></li>
            </ul>
        </nav>
    </header>

    <!-- Main Content -->
    <main>
        <div class="description">
            <h2>Delivery Records</h2>
            <!-- Table -->
            <table class="center-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Donor</th>
                        <th>Beneficiary</th>
                        <th>Distribution Center</th>
                        <th>Food Type</th>
                        <th>Quantity</th>
                        <th>Delivery Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% deliveryRecords.forEach(record => { %>
                        <tr>
                            <td><%= record.id %></td>
                            <td><%= record.donor_id %></td>
                            <td><%= record.beneficiary_id %></td>
                            <td><%= record.distribution_center_id %></td>
                            <td><%= record.food_type_id %></td>
                            <td><%= record.quantity %></td>
                            <td><%= record.delivery_date %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>

            <!-- Form -->
            <div class="card">
                <h3>Add a Delivery Record</h3>
                <form action="/delivery-records" method="POST">
                    <label for="donor_id">Donor ID:</label>
                    <input type="number" name="donor_id" class="input-field" required>

                    <label for="beneficiary_id">Beneficiary ID:</label>
                    <input type="number" name="beneficiary_id" class="input-field" required>

                    <label for="distribution_center_id">Distribution Center ID:</label>
                    <input type="number" name="distribution_center_id" class="input-field" required>

                    <label for="food_type_id">Food Type ID:</label>
                    <input type="number" name="food_type_id" class="input-field" required>

                    <label for="quantity">Quantity:</label>
                    <input type="number" name="quantity" class="input-field" required>

                    <label for="delivery_date">Delivery Date:</label>
                    <input type="date" name="delivery_date" class="input-field" required>

                    <button type="submit" class="btn">Add Delivery Record</button>
                </form>
            </div>
        </div>
    </main>
</div>
</body>
</html>
